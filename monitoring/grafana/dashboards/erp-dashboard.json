{
  "dashboard": {
    "id": null,
    "uid": "erp-monitoring",
    "title": "ERP Services Monitoring",
    "tags": ["erp", "microservices"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Container CPU Usage (%)",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"erp.*\"}[1m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Container Memory Usage (MB)",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"erp.*\"} / 1024 / 1024",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "mbytes", "label": "Memory"},
          {"format": "short"}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "HTTP Requests Total",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{route}} - {{status_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/s"},
          {"format": "short"}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true}
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "Kafka Messages",
        "targets": [
          {
            "expr": "rate(kafka_messages_produced_total[1m])",
            "legendFormat": "Produced - {{topic}}",
            "refId": "A"
          },
          {
            "expr": "rate(kafka_messages_consumed_total[1m])",
            "legendFormat": "Consumed - {{topic}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "mps", "label": "Messages/s"},
          {"format": "short"}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true}
      },
      {
        "id": 5,
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 14},
        "type": "stat",
        "title": "Services Status",
        "targets": [
          {
            "expr": "up{job=~\"erp.*\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ]
          }
        }
      }
    ]
  }
}